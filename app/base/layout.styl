html
	position absolute
	left 0
	right 0
	top 0

	body
		background-color #E7EBF2
		font-size 14px
		height 100%
		margin 0
		padding 0
		line-height 1 !important

		#main-content
			height 100%
			position relative
			width 100%

			#page-content
				margin 0 auto
				position relative
				width 981px
				border 1px solid #D6D6D6
				border-top 0
				background-color #FCFCFC

				.page
					float left
					position relative
					width 700px
					overflow hidden